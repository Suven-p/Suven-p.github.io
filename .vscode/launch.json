    "version": "0.2.0",
    "configurations": [
        {
            "name": "Develop",
            "request": "launch",
            "runtimeArgs": [
                "run",
                "develop"
            ],
            "runtimeExecutable": "npm",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "type": "node",
            "console": "integratedTerminal",
        },
        {
            "name": "Serve",
            "request": "launch",
            "runtimeArgs": [
                "run",
                "serve"
            ],
            "runtimeExecutable": "npm",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "type": "node",
            "preLaunchTask": "npm-build",
            "console": "integratedTerminal",
        },
        {
            "name": "Serve from scratch",
            "request": "launch",
            "runtimeArgs": [
                "run",
                "serve"
            ],
            "runtimeExecutable": "npm",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "type": "node",
            "preLaunchTask": "rebuild",
            "console": "integratedTerminal",
        },
    ]
}
